@{
    ViewData["Title"] = "Login Successful";
    var username = Context.Session.GetString("Username");
}

<div class="container mt-5">
    <div class="card shadow-sm p-4">
        <h2 class="mb-3">Login Successful</h2>

        <p class="lead">
            Welcome back, <strong>@username</strong>!
        </p>

        <p>Your account has been verified and you are now logged in.</p>

        <div class="mt-4">
            <a class="btn btn-primary" href="/Game/StartGame">Start Game</a>
            <a class="btn btn-secondary ms-2" href="/Home/Index">Return Home</a>
        </div>
    </div>
</div>


