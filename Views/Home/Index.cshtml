@{
    ViewData["Title"] = "Main Menu";
}

<div class="text-center">
    <h1 class="display-4 mb-3">Main Menu</h1>
    <p class="lead mb-4">Choose an option to continue.</p>

    <div class="d-flex justify-content-center gap-3 flex-wrap">
        <a class="btn btn-primary btn-lg px-5" asp-controller="User" asp-action="Login">
            Login
        </a>
        <a class="btn btn-outline-primary btn-lg px-5" asp-controller="User" asp-action="Register">
            Register
        </a>
    </div>
</div>
