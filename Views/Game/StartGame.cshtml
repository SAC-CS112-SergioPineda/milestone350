@model CST_350_MilestoneProject.Models.BoardViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h1 class="display-4">Minesweeper</h1>
            <p class="lead">Select your game settings to begin.</p>

            <hr />

            @* The form points to the MineSweeperBoard action in GameController *@
            <form asp-controller="Game" asp-action="MineSweeperBoard" method="post">

                <div class="form-group mb-4 text-left">
                    <label for="size" class="font-weight-bold">Board Size (e.g., 10 for 10x10):</label>
                    <input type="number" name="size" id="size" class="form-control"
                           min="5" max="25" value="10" required />
                    <small class="form-text text-muted">Choose a size between 5 and 25.</small>
                </div>

                <div class="form-group mb-4 text-left">
                    <label class="font-weight-bold">Select Difficulty:</label>
                    <div class="d-flex justify-content-around mt-2">
                        <div class="custom-control custom-radio">
                            <input type="radio" id="diff1" name="difficulty" value="1" class="custom-control-input" checked>
                            <label class="custom-control-label" for="diff1">Easy</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input type="radio" id="diff2" name="difficulty" value="2" class="custom-control-input">
                            <label class="custom-control-label" for="diff2">Medium</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input type="radio" id="diff3" name="difficulty" value="3" class="custom-control-input">
                            <label class="custom-control-label" for="diff3">Hard</label>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary btn-lg btn-block">Start Game</button>
            </form>
        </div>
    </div>
</div>

